.tab-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 120rpx;
  background: white;
  display: flex;
  flex-direction: row;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  /* background-color: white; */
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  /* height: 20rpx; */
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 26rpx;
}

.cover-image {
  width: 56rpx;
  height: 56rpx;
}

.tab-bar-item cover-view {
  font-size: 20rpx;
}
/* 注意优先级问题 */
.tab-bar-item .centerText{
  position: absolute;
  bottom: 8rpx;
  font-size: 25rpx;
  font-weight: bold;
}
.centerImage {
  width: 85rpx;
  height: 85rpx;
  position: absolute;
  top: -4rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
}
