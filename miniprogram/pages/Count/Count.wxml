<!--pages/Count.wxml  统计页面-->
<van-toast id="van-toast" />
<!-- 图标类型选项卡  active默认值为0当前选中标签的标识符-->
<van-tabs color="black" bind:change="onTabChange">
	<van-tab title="部位分布">
		<!-- 顶级时间选项卡 -->
		<van-tabs type="card" animated>
			<!-- 第二级时间选项卡 swipeable可滑动的-->
			<van-tab title="周">
				<van-tabs swipeable animated color="black" border="true" custom-class="vantabs">
					<van-tab title="本周">
						<!-- 饼图表显示区域 -->
						<view class="container">
							<ec-canvas id="mychart-dom-pie" canvas-id="mychart-pie" ec="{{ pieec }}"></ec-canvas>
							<!-- 下方动作详情页 -->
						</view>
						<view>
							<van-collapse value="{{ activeNames }}" bind:change="onCollChange" custom-class="collapse">
								<van-collapse-item title="{{item.area}}" name="{{index}}" value="本周完成{{item.trainRecord.length}}种动作" wx:for="{{trainRecord}}" wx:key="{{index}}">
									<!-- 详情动作卡片 -->
									<van-card title="{{record.actionName}}" thumb="{{ record.actionImage }}" wx:for="{{item.trainRecord}}" wx:for-index="recordIndex" wx:for-item="record">
										<view slot="footer">
											<van-icon name="arrow" bind:click="showDesc" data-actionid="{{record._id}}" data-actionname="{{record.actionName}}"/>
										</view>
										<!-- 数据区域 -->
										<view slot="bottom">
											<view>最大容量
												<text>{{record.maxCount}}</text>
											</view>
											<view>本周容量
												<text>{{record.trainComplishCount}}</text>
											</view>
											<view>最大重量
												<text>{{record.maxWeight}}Kg</text>
											</view>
											<view>日期
												<text>{{record.date}}</text>
											</view>
										</view>
									</van-card>
								</van-collapse-item>
							</van-collapse>
						</view>
					</van-tab>
					<van-tab title="上周">
					</van-tab>
					<van-tab title="16">
					</van-tab>
					<van-tab title="15">
					</van-tab>
					<van-tab title="14">
					</van-tab>
					<van-tab title="13">
					</van-tab>
					<van-tab title="12">
					</van-tab>
					<van-tab title="11">
					</van-tab>
				</van-tabs>
			</van-tab>

			<van-tab title="月">
				<van-tabs active="{{ active }}" swipeable animated>
					<van-tab title="本月">
					</van-tab>
					<van-tab title="上月">
					</van-tab>
					<van-tab title="3月">
					</van-tab>
					<van-tab title="2月">
					</van-tab>
					<van-tab title="1月">
					</van-tab>
					<van-tab title="">
					</van-tab>
					<van-tab title="去年12月">
					</van-tab>
					<van-tab title="去年11月">
					</van-tab>
				</van-tabs>
			</van-tab>

			<van-tab title="年">
				<van-tabs active="{{ active }}" swipeable animated>
					<van-tab title="今年">
					</van-tab>
					<van-tab title="去年">
					</van-tab>
					<van-tab title="2018年">
					</van-tab>
					<van-tab title="2017年">
					</van-tab>
					<van-tab title="2016年">
					</van-tab>
				</van-tabs>
			</van-tab>
		</van-tabs>

	</van-tab>

