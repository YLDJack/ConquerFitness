<van-toast id="van-toast" />
<view class="userinfo">
	<view class="userinfo-avatar">
		<open-data type="userAvatarUrl"></open-data>
	</view>
	<open-data type="userNickName"></open-data>
</view>

<van-popup show="{{ SetBody }}" closeable bind:close="onCloseSetBody" custom-style="height: 35%;width:50%">
	征服者{{nickName}},您好,欢迎您使用ConquerFitness
	请先让我们了解您的身体数据:
	<van-field label='体重' model:value='{{weight}}' placeholder="请输入体重(Kg)" type='number' />
	<van-field label='身高' model:value='{{height}}' placeholder="请输入身高(cm)" type='number' />
	<view class="confirm" bindtap="onSetBody">确定</view>
</van-popup>

<!-- 身体数据图表页面跳转 -->
<van-cell is-link icon="https://636f-conquercheck-geges-1301732640.tcb.qcloud.la/look.png?sign=6ea05de292d0d1c8920539b7a64214b7&t=1590113337" title="查看健康数据图表" link-type="navigateTo" url="/pages/Personal_data/Personal_data" />

<van-collapse value="{{ activeNames }}" bind:change="onChange_collapse">
	<van-collapse-item title="我的健康数据" icon="https://636f-conquercheck-geges-1301732640.tcb.qcloud.la/record.png?sign=18913b8606c886d11bc34aa6fb3368d0&t=1590113362" name="1">

		<van-cell title="性别" is-link bind:click="showPopup_sex" value="{{ sex }}" />

		<van-popup show="{{ showsex }}" round custom-style="height: 40%;margin-bottom:120rpx;" bind:close="onClose_sex">
			<van-picker columns="{{ sexColumns }}" show-toolbar title="性别" bind:cancel="onSexpickerCancel" bind:confirm="onSexpickerConfirm" />
		</van-popup>

		<van-cell title="身高" is-link bind:click="showPopup_height" value="{{ height }}cm" />
		<van-popup show="{{ showheight }}" round closeable custom-style="height: 30%;" bind:close="onClose_height">
			<view class="obtaindate">{{date}}</view>
			<view class="items">
				<view>身高(cm)：</view>
				<van-stepper value="{{ height }}" step="0.1" decimal-length="{{ 1 }}" bind:change="onChange_height" />
			</view>
			<view class="confirm" bindtap="onUpdateCloudData">确定</view>
		</van-popup>

		<!-- 弹出层 -->
		<van-cell title="体重" is-link bind:click="showPopup_weight" value="{{ weight }}Kg" />
		<van-popup show="{{ showweight }}" round closeable custom-style="height: 30%;" bind:close="onClose_weight">
			<view class="obtaindate">{{date}}</view>
			<view class="items">
				<view>体重(Kg)：</view>
				<van-stepper value="{{ weight }}" step="0.1" decimal-length="{{ 1 }}" bind:change="onChange_Weight" />
			</view>
			<view class="confirm" bindtap="onUpdateCloudData">确定</view>
		</van-popup>

		<van-cell title="体脂" is-link bind:click="showPopup_tizhi" value="{{ fat }}%" />
		<van-popup show="{{ showtizhi }}" round closeable custom-style="height: 30%;" bind:close="onClose_tizhi">
			<view class="obtaindate">{{date}}</view>
			<view class="items">
				<view>体脂(%)：</view>
				<van-stepper bind:change="onChange_fat" value="{{ fat }}" step="0.1" decimal-length="{{ 1 }}" />
			</view>
			<view class="confirm" bindtap="onUpdateCloudData">确定</view>
		</van-popup>

		<van-cell title="臂围" is-link bind:click="showPopup_arms" value="{{ arms }}cm" />
		<van-popup show="{{ showarms }}" round closeable custom-style="height: 30%;" bind:close="onClose_arms">
			<view class="obtaindate">{{date}}</view>
			<view class="items">
				<view>臂围(cm)：</view>
				<van-stepper bind:change="onChange_arms" value="{{ arms }}" step="0.1" decimal-length="{{ 1 }}" />
			</view>
			<view class="confirm" bindtap="onUpdateCloudData">确定</view>
		</van-popup>

		<van-cell title="胸围" is-link bind:click="showPopup_breast" value="{{ breast }}cm" />
		<van-popup show="{{ showbreast }}" round closeable custom-style="height: 30%;" bind:close="onClose_breast">
			<view class="obtaindate">{{date}}</view>
			<view class="items">
				<view>胸围(cm)：</view>
				<van-stepper bind:change="onChange_breast" value="{{ breast }}" step="0.1" decimal-length="{{ 1 }}" />
			</view>
			<view class="confirm" bindtap="onUpdateCloudData">确定</view>
		</van-popup>

		<van-cell title="腰围" is-link bind:click="showPopup_waist" value="{{ waist }}cm" />
		<van-popup show="{{ showwaist }}" round closeable custom-style="height: 30%;" bind:close="onClose_waist">
			<view class="obtaindate">{{date}}</view>
			<view class="items">
				<view>胸围(cm)：</view>
				<van-stepper bind:change="onChange_waist" value="{{ waist }}" step="0.1" decimal-length="{{ 1 }}" />
			</view>
			<view class="confirm" bindtap="onUpdateCloudData">确定</view>
		</van-popup>



		<van-cell title="臀围" is-link bind:click="showPopup_hip" value="{{ ass }}cm" />
		<van-popup show="{{ showhipline }}" round closeable custom-style="height: 30%;" bind:close="onClose_hip">
			<view class="obtaindate">{{date}}</view>
			<view class="items">
				<view>臀围(cm)：</view>
				<van-stepper bind:change="onChange_hip" value="{{ ass }}" step="0.1" decimal-length="{{ 1 }}" />
			</view>
			<view class="confirm" bindtap="onUpdateCloudData">确定</view>
		</van-popup>

		<van-cell title="腿围" is-link bind:click="showPopup_legs" value="大腿:{{ leg }}cm 小腿:{{smallleg}}cm" />
		<van-popup show="{{ showlegs }}" round closeable custom-style="height: 40%;" bind:close="onClose_legs">
			<view class="obtaindate">{{date}}</view>
			<view class="items_leg">
				<view>大腿(cm)：</view>
				<van-stepper bind:change="onChange_legs" value="{{ leg }}" step="0.1" decimal-length="{{ 1 }}" />
			</view>
			<view class="items_leg">
				<view>小腿(cm)：</view>
				<van-stepper bind:change="onChange_smallleg" value="{{ smallleg }}" step="0.1" decimal-length="{{ 1 }}" />
			</view>
			<view class="confirm" bindtap="onUpdateCloudData">确定</view>
		</van-popup>
	</van-collapse-item>
</van-collapse>

<van-cell title="训练目标" icon="https://636f-conquercheck-geges-1301732640.tcb.qcloud.la/status.png?sign=193f7eb93287c5719ce89a6f42903dfb&t=1590113399" is-link value="{{trainState}}" bind:click="showPopup_statu" />
<van-popup show="{{ showstatu }}" position="bottom" custom-style="height: 40%;margin-bottom:120rpx;">
	<van-picker columns="{{ columns }}" show-toolbar title="锻炼状态" bind:cancel="onpickerCancel" bind:confirm="onpickerConfirm" />
</van-popup>

<van-cell icon="https://636f-conquercheck-geges-1301732640.tcb.qcloud.la/setting.png?sign=8ac92f299f9437afc597a2b32f794d8e&t=1590113414" is-link title="训练设置" link-type="navigateTo" url="/pages/setPreferences/setPreferences" />

<van-cell icon="https://636f-conquercheck-geges-1301732640.tcb.qcloud.la/feedback.png?sign=2a4fb53d2382600573db8a62715ebbb5&t=1590113732" is-link title="意见反馈" link-type="navigateTo" url="/pages/Feedback/Feedback" />

