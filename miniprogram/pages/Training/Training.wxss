/* 第一行的计时器 */
.miaobiao{
  margin: 10rpx 30rpx 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.count{
  font-size: 50rpx;
  color:  rgb(107, 105, 105);
  font-weight: bold;
}
.countbutton{
  width: 300rpx;
  display: flex;
  justify-content: space-evenly;
}


/* 训练进度区域 */
.text_progress{
  margin-left: 20rpx;
}

.titleandweight{
  margin-left: 20rpx;
}
.titleandweight text{
  font-size: 30rpx;
  font-weight: bold;
}

.traingroup{
  display: flex;
  align-items: center;
}
.groupnum{
  font-size: 28rpx;
  margin-right: 15rpx;
}
.traindata{
  width: 180rpx;
  margin-right: 20rpx;
  
}
.traincountdown{
  margin-left: 25rpx;
}

.edit{
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

/* 倒计时弹出层的样式 */
.resttime{
  margin-top: 60rpx;
  font-size: 55rpx;
  color: white;
  font-weight: bold;
}
.setresttime{
  width: 385rpx;
  /* height: 200rpx; */
  display: flex;
  justify-content: space-evenly;
  margin-top: 25rpx;
  padding-left: 15rpx;
  
}
.item {
  display: inline-block;
  width: 50rpx;
  /* margin-right: 10rpx; */
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  background-color: rgb(43, 41, 41);
  border-radius: 4rpx;
}
.symbal{
  font-size: 40rpx;
  color: #fff;
}

.inputresttime{
  display: flex;
  margin-top: 20rpx;
  justify-content: space-evenly;
  align-items: center;
}
.inputtip{
  color: white;
}

.setbutton{
  display: flex;
  justify-content: space-evenly;
  margin-top: 25rpx;
}
/* 下拉框的输入条 */
.valueslot{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: center;
}