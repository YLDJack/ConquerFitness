.container{
  width: 95%;
  height: 100%;
  margin: 0 auto;
  overflow-y: scroll;
}
.avatar{
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  /* position: relative; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #E8F4FB;
}
.a{
  /* float: none; */
  width: 100rpx;
  height: 100rpx;
  margin-top:25rpx;
  margin-bottom: 25rpx;
  border-radius: 50%;
}
.avatar .nickName{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
/* 插入横线 */
.avatar::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(.5);
  background-color: #9D9D9D;
}


